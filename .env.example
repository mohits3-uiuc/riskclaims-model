# .env.example - Template for environment variables
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Claims Risk Classification"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL="postgresql://admin:password@localhost:5432/claims_db"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="claims_db"
DATABASE_USER="admin"
DATABASE_PASSWORD="password"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# =============================================================================
# API CONFIGURATION
# =============================================================================
SECRET_KEY="your-super-secure-secret-key-here-change-this-in-production"
API_V1_STR="/api/v1"
PROJECT_NAME="Claims Risk Classification"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET="your-claims-data-bucket"
S3_STRUCTURED_PREFIX="structured/"
S3_UNSTRUCTURED_PREFIX="unstructured/"

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_TRACKING_URI="http://localhost:5000"
MLFLOW_S3_ENDPOINT_URL="https://s3.amazonaws.com"
MLFLOW_EXPERIMENT_NAME="claims-risk-classification"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_URL="http://localhost:9090"
GRAFANA_URL="http://localhost:3000"
GRAFANA_USER="admin"
GRAFANA_PASSWORD="admin"

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_NAME="claims-risk-model"
MODEL_VERSION="latest"
MODEL_PATH="data/models/"
PREDICTION_THRESHOLD=0.5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
SQLALCHEMY_ECHO=false
CACHE_ENABLED=true
CACHE_TTL=300